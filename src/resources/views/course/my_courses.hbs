<table class='table'>
    <thead>
        <tr>
            <th scope='col'>STT</th>
            <th scope='col'>Name</th>
            <th scope='col'>description</th>
            <th scope='col'>#</th>
        </tr>
    </thead>
    <tbody>
        {{#each courses}}
            <tr>
                <th scope='row'>{{@index}}</th>
                <td><img
                        src={{this.image}}
                        class='img-fluid detail'
                        alt='...'
                    /></td>
                <td>
                    <p>{{this.name}}</p>
                </td>
                <td>
                    <p>{{this.description}}</p>
                </td>
                <td>
                    <a href='detail/{{this.slug}}'>edit</a>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>